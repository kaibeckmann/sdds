PLATFORM_LINUX_SDDS_IFACE						=	usb0
IP_ADDRESS 										= 	fe80::12:13ff:fe14:2323
PLATFORM_LINUX_SDDS_LISTEN_ADDRESS				=	$(IP_ADDRESS)%$(PLATFORM_LINUX_SDDS_IFACE)
PLATFORM_LINUX_SDDS_SEND_ADDRESS				=	$(IP_ADDRESS)%$(PLATFORM_LINUX_SDDS_IFACE)
PLATFORM_LINUX_SDDS_BUILTIN_MULTICAST_ADDRESS	=	ff02::01:10%$(PLATFORM_LINUX_SDDS_IFACE)

SDDS_BUILTIN_PARTICIPANT_ADDRESS				=	ff02::01:10%$(PLATFORM_LINUX_SDDS_IFACE)
SDDS_BUILTIN_TOPIC_ADDRESS						=	ff02::01:20%$(PLATFORM_LINUX_SDDS_IFACE)
SDDS_BUILTIN_PUBLICATION_ADDRESS				=	ff02::01:30%$(PLATFORM_LINUX_SDDS_IFACE)
SDDS_BUILTIN_SUBSCRIPTION_ADDRESS				=	ff02::01:40%$(PLATFORM_LINUX_SDDS_IFACE)

PLATFORM_LINUX_SDDS_PROTOCOL=AF_INET6

APPLICATION_NAME = sdds

export APPLICATION_NAME
export PLATFORM_LINUX_SDDS_LISTEN_ADDRESS
export PLATFORM_LINUX_SDDS_SEND_ADDRESS 
export PLATFORM_LINUX_SDDS_PROTOCOL 
export PLATFORM_LINUX_SDDS_BUILTIN_MULTICAST_ADDRESS
export SDDS_BUILTIN_PARTICIPANT_ADDRESS
export SDDS_BUILTIN_TOPIC_ADDRESS
export SDDS_BUILTIN_PUBLICATION_ADDRESS
export SDDS_BUILTIN_SUBSCRIPTION_ADDRESS
export PLATFORM_LINUX_SDDS_IFACE

all:
	$(MAKE) -f Makefile_2nd_lvl.mk $(APPLICATION_NAME) $(MAKEOPTS)

clean:
	$(MAKE) -f Makefile_2nd_lvl.mk clean
