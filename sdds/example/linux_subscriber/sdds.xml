<project
    name = "linux_subscriber"
    script = "sdds.gsl"
    endian = "little"
    os = "linux"
    >
    Linux basic subscriber example

    <!--
         iface: this node shall use
         ip: ipv6 of the iface
         port: to send to
     -->
    <linux iface = "eth0" ip = "fe80::219:99ff:fede:9b09" port = "23234" />

    <!--
        Includes are processed first, so XML in included files will be
        part of the XML tree
    -->
    <include filename = "../topics/ipc.xml" />

    <role topic = "ipc" type = "subscriber" />
</project>
