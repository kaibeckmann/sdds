<project
    name = "linux_steffen1"
    script = "sdds.gsl"
    endian = "little"
    os = "linux"
    iface = "eth0"
    ip = "fe80::219:99ff:fede:9a7a"
    port = "23235"
	protocol = "AF_INET6"
