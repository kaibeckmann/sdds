<project
    name = "riot_mcast1"
    script = "sdds.gsl"
    endian = "big"
    os = "riot"
	ip = "fd29:144d:4196:94::123"
    port = "23234"
	protocol = "AF_INET6"
    >
    Linux multicast discovery example with beta topic.

	<define name = "FEATURE_SDDS_MULTICAST_ENABLED"/>
    <define name = "FEATURE_SDDS_BUILTIN_TOPICS_ENABLED"/>
    <define name = "FEATURE_SDDS_DISCOVERY_ENABLED"/>

	<define name = "SDDS_6LOWPAN_CHANNEL" value = "0"/>
	<define name = "SDDS_6LOWPAN_PANID" value = "0xbabe"/>
    <define name = "SDDS_6LOWPAN_RPL_ENABLED" value = "1"/>
    <!-- SDDS_6LOWPAN_RPL_ROOT_NODE_ADDR only one node in network-->
    <define name = "SDDS_6LOWPAN_RPL_ROOT_NODE_ADDR" value = "2001:db8::1/64"/>
	<define name = "TRANSPORT_IPV6_SDDS_PORT" value = "23234"/>
	<define name = "TRANSPORT_IPV6_SDDS_BUILTIN_MULTICAST_PORT_OFF" value = "50"/>

    <define name = "SDDS_NET_MAX_BUF_SIZE" value = "128"/>
    <define name = "SDDS_QOS_HISTORY_DEPTH" value = "3"/>
    <define name = "SDDS_NET_MAX_LOCATOR_COUNT" value = "10"/>

    <define name = "SDDS_DISCOVERY_RECEIVE_TIMER" value = "1"/>
    <define name = "SDDS_DISCOVERY_PARTICIPANT_TIMER" value = "10"/>
    <define name = "SDDS_DISCOVERY_PUBLICATION_TIMER" value = "10"/>
    <define name = "SDDS_DISCOVERY_TOPIC_TIMER" value = "0"/>
