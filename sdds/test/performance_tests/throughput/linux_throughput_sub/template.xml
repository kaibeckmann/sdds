<project
    name = "linux_throughput_sub"
    script = "sdds.gsl"
    endian = "little"
    os = "linux"
    iface = "{iface}"
    device = "{dev}"
    ip = "{ip}"
    port = "23234"
    protocol = "AF_INET6"
    >
    Point to Point throughput test

    <define name = "SDDS_NET_MAX_BUF_SIZE" value = "128+{msg_size}"/>
    <define name = "SDDS_QOS_HISTORY_DEPTH" value = "5"/>
    <define name = "SDDS_NET_MAX_LOCATOR_COUNT" value = "10"/>

    <define name = "THROUGHPUT_DURATION" value = "{duration}"/>
    <define name = "THROUGHPUT_MSG_SIZE" value = "{msg_size}"/>
    <define name = "TEST_THROUGHPUT"/>
    <define name = "THROUGHPUT_LOG" value="&quot;../../throughput_pub_{duration}_{msg_size}.log&quot;"/>

    <topic name = "throughput" domain = "1" id = "6">
	    Topic for measuring throughput
        <attribute name = "data" type = "DDS_string" size = "{msg_size}">playload in bytes</attribute>
    </topic>

    <role topic = "throughput" type = "subscriber"/>
</project>
