<project
    name = "linux_throughput_sub"
    script = "sdds.gsl"
    endian = "little"
    os = "linux"
    iface = "{iface}"
    device = "{dev}"
    ip = "{ip}"
    port = "23234"
    protocol = "{prot}"
    >
    Point to Point throughput test

    <define name = "FEATURE_SDDS_MULTICAST_ENABLED"/>
    <define name = "FEATURE_SDDS_BUILTIN_TOPICS_ENABLED"/>
    <define name = "FEATURE_SDDS_DISCOVERY_ENABLED"/>
    <define name = "DISCOVERY_UNICAST_SUBSCRIPTION"/>
    <define name = "SDDS_DISCOVERY_RECEIVE_TIMER" value = "30"/>
    <define name = "SDDS_DISCOVERY_PARTICIPANT_TIMER" value = "30"/>
    <define name = "SDDS_DISCOVERY_PUBLICATION_TIMER" value = "60"/>

<!--<define name = "SDDS_NET_MAX_BUF_SIZE" value = "128+{msg_size}"/> -->
    <define name = "SDDS_NET_MAX_BUF_SIZE" value = "65536000"/>
    <define name = "SDDS_QOS_HISTORY_DEPTH" value = "{max_mbit}"/>
    <define name = "SDDS_NET_MAX_LOCATOR_COUNT" value = "10"/>

    <define name = "THROUGHPUT_DURATION" value = "{duration}"/>
    <define name = "THROUGHPUT_MSG_SIZE" value = "{msg_size}"/>
    <define name = "TEST_THROUGHPUT"/>
    <define name = "THROUGHPUT_LOG" value="&quot;../../throughput_sub_{prot}_{duration}_{msg_size}.log&quot;"/>

    <topic name = "throughput" domain = "1" id = "6">
	    Topic for measuring throughput
        <attribute name = "data" type = "DDS_string" size = "{msg_size}">playload in bytes</attribute>
<!--        <config type="qos_reliability" reliabilitySeqnrSize="basic" kind="reliable" confirmationtype="ack" max_blocking_time="150"/> -->
    </topic>

    <role topic = "throughput" type = "subscriber"/>
</project>
