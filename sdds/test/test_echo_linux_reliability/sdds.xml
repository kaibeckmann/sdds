<project
    name = "test_echo_linux_reliability"
    script = "sdds.gsl"
    endian = "little"
    os = "linux"
    iface = "tap0"
    protocol = "AF_INET6"
    ip = "fe80::c0ef:62ff:fed4:d26a"
    port = "23234"
    >
    Linux basic publisher example

    <!--
        Includes are processed first, so XML in included files will be
        part of the XML tree
    -->
    
    <define name = "FEATURE_SDDS_MULTICAST_ENABLED" />
    <define name = "FEATURE_SDDS_BUILTIN_TOPICS_ENABLED" />
    <define name = "FEATURE_SDDS_DISCOVERY_ENABLED" />
    <define name = "SDDS_HAS_QOS_RELIABILITY" />

    <define name = "SDDS_NET_MAX_BUF_SIZE" value = "8192"/>
    <define name = "SDDS_NET_MAX_LOCATOR_COUNT" value = "20"/>
    <define name = "SDDS_DISCOVERY_RECEIVE_TIMER" value = "1"/>
    <define name = "SDDS_DISCOVERY_PARTICIPANT_TIMER" value = "1"/>
    <define name = "SDDS_DISCOVERY_PUBLICATION_TIMER" value = "5"/>
    <define name = "SDDS_DISCOVERY_TOPIC_TIMER" value = "0"/>
    
    <include filename = "../topics/testing.xml" />

    <role topic = "testqosreliabilitybasic" type = "publisher"/>
    <role topic = "testqosreliabilitybasic" type = "subscriber"/>
    <role topic = "testqosreliabilitysmall" type = "publisher"/>
    <role topic = "testqosreliabilitysmall" type = "subscriber"/>
    <role topic = "testqosreliabilitybig" type = "publisher"/>
    <role topic = "testqosreliabilitybig" type = "subscriber"/>
    <role topic = "testqosreliabilityhuge" type = "publisher"/>
    <role topic = "testqosreliabilityhuge" type = "subscriber"/>
</project>
