<project
    name = "echo_server"
    script = "sdds.gsl"
    endian = "little"
    os = "netbsd"
    iface = "vioif0"
    ip = "fe80::5054:0ff:fe62:bf16"
    port = "23234"
    >
    Rumpkernel basic publisher example

    <!--
        Includes are processed first, so XML in included files will be
        part of the XML tree
    -->

    <define name = "PLATFORM_RUMP" />
    <define name = "PLATFORM_LINUX_SDDS_IFACE" value = "&quot;vioif0&quot;"/>
    <define name = "PLATFORM_LINUX_SDDS_IP_ADDRESS" value =  "&quot;fe80::5054:0ff:fe62:bf16&quot;"/>
    <define name = "PLATFORM_LINUX_SDDS_PORT" value =  "23234"/>
    <define name = "PLATFORM_LINUX_SDDS_ADDRESS" value =  "PLATFORM_LINUX_SDDS_IP_ADDRESS&quot;%&quot;PLATFORM_LINUX_SDDS_IFACE"/>
    <define name = "FEATURE_SDDS_MULTICAST_ENABLED" />
    <define name = "FEATURE_SDDS_BUILTIN_TOPICS_ENABLED" />
    <define name = "FEATURE_SDDS_DISCOVERY_ENABLED" />
    <define name = "SDDS_NET_MAX_BUF_SIZE" value = "8192"/>
    <define name = "SDDS_NET_MAX_LOCATOR_COUNT" value = "20"/>
    <define name = "SDDS_DISCOVERY_RECEIVE_TIMER" value = "1"/>
    <define name = "SDDS_DISCOVERY_PARTICIPANT_TIMER" value = "1"/>
    <define name = "SDDS_DISCOVERY_PUBLICATION_TIMER" value = "5"/>
    <define name = "SDDS_DISCOVERY_TOPIC_TIMER" value = "0"/>
 
    
    
    <include filename = "../topics/testing.xml" />

    <role topic = "stringsEcho" type = "publisher"/>
    <role topic = "strings" type = "subscriber" />

    <role topic = "numbersEcho" type = "publisher"/>
    <role topic = "numbers" type = "subscriber" />
</project>
