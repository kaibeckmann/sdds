SIZE    = avr-size

#-Compiler flags-------------------------------
CFLAGS =  -Os -std=gnu99 -pipe -c -W -Wall -ffunction-sections -mmcu=at90usb1287 -mcall-prologues -fshort-enums --param inline-call-cost=2
